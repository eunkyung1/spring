<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
    
<!-- MemberMapper.java 연결  (인터페이스)-->
<mapper namespace="com.java.www.mapper.MemberMapper">

	<!-- 게시글 전체 가져오기 -->
	<select id="login" resultType="com.java.www.dto.MemberDto">
		select * from member where id=#{id} and pw=#{pw}
	</select>
	
	<!-- id 중복체크 -->
	<select id="idCheck" resultType="com.java.www.dto.MemberDto">
		select * from member where id=#{id}
	</select>
	
	<!-- memberSearch -->
	<select id="memberSearch" resultType="com.java.www.dto.MemberDto">
		select * from member2 where name=#{name} and email=#{email}
	</select>



</mapper>

